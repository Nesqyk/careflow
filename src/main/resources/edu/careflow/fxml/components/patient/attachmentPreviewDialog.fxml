<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="attachmentPreviewContainer" prefHeight="699.0" prefWidth="803.0" spacing="24.0" style="-fx-background-color: white;" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" styleClass="details-card">
         <children>
            <Label fx:id="titleLabel" alignment="CENTER" prefHeight="16.0" prefWidth="189.0" styleClass="section-header" text="Attachment Preview" textAlignment="CENTER">
               <font>
                  <Font name="☞Gilroy-SemiBold" size="14.0" />
               </font>
            </Label>
            <Region prefWidth="212.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" styleClass="icon-button">
               <graphic>
                  <FontIcon iconLiteral="far-times-circle" iconSize="20" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <VBox prefHeight="394.0" prefWidth="739.0" spacing="16.0" styleClass="details-card">
         <children>
            <Label styleClass="section-header" text="1. Preview">
               <font>
                  <Font name="☞Gilroy-SemiBold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="326.0" prefWidth="691.0">
               <children>
                  <ImageView fx:id="previewImage" fitHeight="328.0" fitWidth="400.0" preserveRatio="true" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
      <VBox spacing="16.0" styleClass="details-card">
         <children>
            <Label styleClass="section-header" text="2. Details">
               <font>
                  <Font name="☞Gilroy-SemiBold" size="14.0" />
               </font>
            </Label>
            <VBox spacing="16.0">
               <children>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="field-label" text="File Name">
                           <font>
                              <Font name="☞Gilroy-SemiBold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="fileNameLabel" styleClass="content-text" text="aaa">
                           <font>
                              <Font name="☞Gilroy-Regular" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="field-label" text="Description">
                           <font>
                              <Font name="☞Gilroy-SemiBold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="descriptionLabel" styleClass="content-text" text="aaa" wrapText="true">
                           <font>
                              <Font name="☞Gilroy-Regular" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="field-label" text="Upload Date">
                           <font>
                              <Font name="☞Gilroy-SemiBold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="uploadDateLabel" styleClass="content-text" text="aaa">
                           <font>
                              <Font name="☞Gilroy-Regular" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
   </children>
</VBox>
