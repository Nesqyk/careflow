<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="24" styleClass="attachment-container" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.careflow.presentation.controllers.doctor.cards.AttachmentViewController">
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="closeButton" styleClass="close-button" stylesheets="@../../../css/styles.css">
            <graphic>
                <FontIcon iconLiteral="fas-times" />
            </graphic>
        </Button>
        <VBox.margin>
            <Insets bottom="8" />
        </VBox.margin>
    </HBox>
    <!-- Upload Method Selection -->
    <HBox alignment="CENTER" spacing="16">
        <ToggleButton fx:id="fileUploadToggle" selected="true" styleClass="method-toggle">
            <graphic>
                <FontIcon iconLiteral="fas-file-upload" />
            </graphic>
            <text>Upload File</text>
        </ToggleButton>
        <ToggleButton fx:id="webcamToggle" styleClass="method-toggle">
            <graphic>
                <FontIcon iconLiteral="fas-camera" />
            </graphic>
            <text>Use Webcam</text>
        </ToggleButton>
    </HBox>

    <!-- File Upload Section -->
    <StackPane fx:id="uploadContainer" styleClass="upload-container">
        <VBox fx:id="dropZone" alignment="CENTER" spacing="16" styleClass="drop-zone">
            <FontIcon iconLiteral="fas-cloud-upload-alt" styleClass="upload-icon" />
            <Label styleClass="upload-text" text="Drag and drop files here" />
            <Label styleClass="upload-text-secondary" text="or" />
            <Button fx:id="browseButton" styleClass="browse-button" stylesheets="@../../../css/styles.css">
                <graphic>
                    <FontIcon iconLiteral="fas-folder-open" />
                </graphic>
                <text>Browse Files</text>
            </Button>
            <Label styleClass="upload-hint" text="Supported: JPEG, JPG, PNG, PDF (Max 1MB)" />
        </VBox>
    </StackPane>

    <!-- Webcam Section -->
    <StackPane fx:id="webcamContainer" managed="false" styleClass="webcam-container" visible="false">
        <VBox alignment="CENTER" spacing="16">
            <ImageView fx:id="webcamView" fitHeight="300" fitWidth="400" preserveRatio="true" />
            <HBox alignment="CENTER" spacing="16">
                <Button fx:id="captureButton" styleClass="capture-button">
                    <graphic>
                        <FontIcon iconLiteral="fas-camera" />
                    </graphic>
                    <text>Capture</text>
                </Button>
                <Button fx:id="retakeButton" styleClass="retake-button" visible="false">
                    <graphic>
                        <FontIcon iconLiteral="fas-redo" />
                    </graphic>
                    <text>Retake</text>
                </Button>
            </HBox>
        </VBox>
    </StackPane>

    <!-- Preview Section -->
    <VBox fx:id="previewContainer" managed="false" spacing="16" styleClass="preview-container" visible="false">
        <HBox alignment="CENTER_LEFT" spacing="12">
            <FontIcon fx:id="fileTypeIcon" styleClass="file-type-icon" />
            <VBox spacing="4">
                <Label fx:id="fileName" styleClass="file-name" />
                <Label fx:id="fileSize" styleClass="file-size" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="removeButton" styleClass="remove-button">
                <graphic>
                    <FontIcon iconLiteral="fas-times" />
                </graphic>
            </Button>
        </HBox>
        <ImageView fx:id="previewImage" fitHeight="200" fitWidth="200" preserveRatio="true" visible="false" />
    </VBox>

    <!-- Metadata Section -->
    <VBox spacing="16">
        <TextField fx:id="attachmentName" promptText="Attachment name" styleClass="text-field-gray" />
        <VBox styleClass="description-container">
            <TextArea fx:id="description" maxHeight="200" prefRowCount="3" promptText="Description" styleClass="text-field-gray" wrapText="true" />
            <Label fx:id="charCount" alignment="CENTER_RIGHT" styleClass="char-count" />
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="16">
        <Button fx:id="cancelButton" styleClass="button-secondary" text="Cancel" />
        <Button fx:id="addButton" styleClass="button-primary" text="Add Attachment" />
    </HBox>

</VBox>
