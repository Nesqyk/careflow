<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="1.7976931348623157E308" spacing="8.0" styleClass="details-card" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.careflow.presentation.controllers.components.user.UserDetailsCardController">
   <children>
      <HBox spacing="24.0">
         <children>
            <VBox fx:id="detailsContainer" spacing="24.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                     <children>
                        <Label styleClass="section-header" text="User Details">
                           <font>
                              <Font name="☞Gilroy-SemiBold" size="16.0" />
                           </font>
                        </Label>
                        <Button fx:id="editButton" onAction="#handleEdit" styleClass="edit-button" text="Edit">
                           <font>
                              <Font name="☞Gilroy-Medium" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="delete-button" text="Delete">
                           <font>
                              <Font name="☞Gilroy-Medium" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <VBox spacing="16.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" styleClass="details-row">
                           <children>
                              <Label styleClass="detail-label" text="Full Name">
                                 <font>
                                    <Font name="☞Gilroy-Medium" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="userFullName" styleClass="detail-value" text="User Name">
                                 <font>
                                    <Font name="☞Gilroy-Regular" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" styleClass="details-row">
                           <children>
                              <Label styleClass="detail-label" text="Role">
                                 <font>
                                    <Font name="☞Gilroy-Medium" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="userRole" styleClass="detail-value" text="User Role">
                                 <font>
                                    <Font name="☞Gilroy-Regular" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" styleClass="details-row">
                           <children>
                              <Label styleClass="detail-label" text="Username">
                                 <font>
                                    <Font name="☞Gilroy-Medium" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="userUsername" styleClass="detail-value" text="username">
                                 <font>
                                    <Font name="☞Gilroy-Regular" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" styleClass="details-row">
                           <children>
                              <Label styleClass="detail-label" text="User ID">
                                 <font>
                                    <Font name="☞Gilroy-Medium" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="userId" styleClass="detail-value" text="ID">
                                 <font>
                                    <Font name="☞Gilroy-Regular" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
   </padding>
</VBox> 