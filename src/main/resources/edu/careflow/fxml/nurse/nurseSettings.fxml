<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="16" style="-fx-background-color: white; -fx-padding: 24; -fx-border-radius: 8;">
    <Label text="Settings" style="-fx-font-size: 20px; -fx-font-family: 'Gilroy-SemiBold'; -fx-text-fill: #0078D4;" />
    <GridPane hgap="12" vgap="12">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label text="Contact Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="contactField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="saveBtn" text="Save" styleClass="primary-btn" />
        <Button fx:id="cancelBtn" text="Cancel" styleClass="secondary-btn" />
    </HBox>
</VBox> 